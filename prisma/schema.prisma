generator client {
  provider = "prisma-client-js"
  binaryTargets= ["darwin","debian-openssl-1.1.x","rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator nestgraphql {
    provider = "node node_modules/prisma-nestjs-graphql"
    output = "../src/@generated"
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  hash      String
  name      String?

  @@map("users")
}

model Movie {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  thumbnail     String
  title         String
  releasedYear  Int
  certificate   String?
  runtime       String
  genre         String
  rating        Float
  description   String
  metaScore     Int?
  director      String
  cast         String[]
  numberOfVotes Int
  gross         String?

  @@map("movies")
}
