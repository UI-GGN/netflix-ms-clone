generator client {
  provider = "prisma-client-js"
  binaryTargets= ["darwin","debian-openssl-1.1.x","rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  hash      String
  name      String?

  @@map("users")
}

model Movie {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  thumbnail     String
  title         String
  releasedYear  Int
  certificate   String?
  runtime       String
  genre         String
  rating        Float
  description   String
  metaScore     Int?
  director      String
  star1         String
  star2         String
  star3         String
  star4         String
  numberOfVotes Int
  gross         String?

  @@map("movies")
}
